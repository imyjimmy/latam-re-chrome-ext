{
    "manifest_version": 3,
    "name": "LATAM Real Estate Chrome Extension",
    "version": "1.0",
    "description": "Automatically converts local currencies (Colombian Peso COP for now) to USD",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "https://primaverarealtymedellin.com/*"
    ],
    "action": {},
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["https://primaverarealtymedellin.com/*"],
      "js": ["content.js"]
    }]
}